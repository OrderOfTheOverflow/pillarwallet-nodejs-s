{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "sourceMap": true,
        "lib": ["es6"],
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
